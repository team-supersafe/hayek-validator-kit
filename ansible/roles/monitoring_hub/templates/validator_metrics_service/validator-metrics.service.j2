[Unit]
Description=Solana Validator Metrics Collector
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
# Load environment variables from centralized file
EnvironmentFile=-/usr/local/etc/hayek-monitor.env
ExecStart=/bin/bash -c 'while true; do /usr/local/bin/validator_metrics-{{ item.value.network_name }}.sh; sleep 120; done'
Restart=always
RestartSec=5
TimeoutStopSec=10
KillMode=mixed
KillSignal=SIGTERM
SendSIGKILL=yes
User=root

[Install]
WantedBy=multi-user.target