{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowListAndReadManifests",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket"
      ],
      "Resource": "arn:aws:s3:::solv-store",
      "Condition": {
        "StringLike": {
          "s3:prefix": [
            "staging/*",
            "agave/releases/download/*",
            "jito-solana/releases/download/*",
            "manifests/*"
          ]
        }
      }
    },
    {
      "Sid": "AllowReadWriteStagingAndReleaseArtifacts",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:GetObjectTagging",
        "s3:PutObjectTagging"
      ],
      "Resource": [
        "arn:aws:s3:::solv-store/staging/*",
        "arn:aws:s3:::solv-store/agave/releases/download/*",
        "arn:aws:s3:::solv-store/jito-solana/releases/download/*",
        "arn:aws:s3:::solv-store/manifests/*"
      ]
    }
  ]
}
