[Unit]
Description=Configure validator service user SSH key
After=local-fs.target
Before=multi-user.target

[Service]
Type=oneshot
PassEnvironment=HOST_DEFAULT_USER VALIDATOR_SERVICE_USER
ExecStart=/container-setup/scripts/set-validator-service-user-ssh-key.sh
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target